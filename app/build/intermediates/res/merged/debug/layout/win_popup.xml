<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupbg"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/save_record"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/saverecord" />

        <Button
            android:id="@+id/next_level"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/nextlevel" />

        <Button
            android:id="@+id/quit_to_menu"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/quittomenu" />

        <Button
            android:id="@+id/post_to_fb"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sharescore" />

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/scoretext" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/timetext" />

    <TextView
        android:id="@+id/finalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="82dp"
        android:textColor="@android:color/white"
        android:textSize="37sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/finalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="142dp"
        android:textColor="@android:color/white"
        android:textSize="37sp"
        android:textStyle="bold" />


</RelativeLayout>